import random as rd

runner = True
games_played = 0
games_won = 0

while runner:

  counter = 1
  guesses = []
  mumber = rd.randint(1,100)

  print("==ScoreBoard==")
  print(f"Games Played: {games_played}")
  print(f"Games Won: {games_won}")
  print()


  answer = input("Play again (y/n)?: ")
  if answer == "y":
    runner = True
  elif answer == "n":
    runner = False
    print("Thanks for playing!")
    break

  print("Lets play guess the number! I will have a number in mind from one  to ten.")
  
  print("When you think you know the number I have in mind, type it!")

  print(mumber)

  while len(guesses) < 10:
   print(f"You have already guessed: {guesses}")
    
   number = int(input("Type the number you guessed!: "))
    
   guesses.append(number)
   if number > mumber:
     print("too high!")
     
   if number < mumber:
     print("too low!")
     
   if mumber == number:
      print("You win!")
      games_won += 1
      games_played += 1
      break

   counter += 1
